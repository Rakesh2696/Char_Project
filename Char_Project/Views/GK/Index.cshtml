
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        .form {
            border: 1px solid #04AA6D;
            height: 580px;
            width: 350px;
            float: left;
            margin-top: 100px;
            margin-left: 500px;
            text-align: center;
        }

        .para {
            font-size: 18px;
            font-family: arial;
        }

        .text {
            width: 270px;
            height: 30px;
            border-radius: 5px;
            font-family: arial;
            padding: 10px;
            font-size: 16px;
            margin-top: 15px;
            border: 1px solid #DDDFE2;
        }

        .button {
            width: 110px;
            height: 40px;
            border-radius: 10px;
            text-align: center;
            font-family: arial;
            font-size: 16px;
            font-weight: bold;
            color: #FFFFFF;
            background-color: #04AA6D;
            padding: 5px;
            border: none;
            margin-top: 50px;
        }

        .dropdown {
            width: 290px;
            height: 52px;
            border-radius: 5px;
            font-family: arial;
            padding: 10px;
            font-size: 16px;
            margin-top: 15px;
            border: 1px solid #DDDFE2;
        }
    </style>
</head>
<body style="background-image: url('../../content/2.jpg');">

    <div class="form">
        <h2 style="color: brown;">Git Hub Registration</h2>
        <form>
            <p class="para"><input type="text" class="text" placeholder="First Name:" id="txtfirstname"></p>
            <p><input type="text" class="text" placeholder="Last Name:" id="txtlastname"></p>
            <p><input type="text" class="text" placeholder="E-mail:" id="txtemail"></p>
            <p><input type="text" class="text" placeholder="Mobile No:" id="txtmNo"></p>


            <select id="drpState" class="dropdown">
                <option value="">Select State</option>
                <option value="AndhraPradesh">AndhraPradesh</option>
                <option value="Telangana">Telangana</option>
                <option value="Tamilnadu">Tamilnadu</option>
                <option value="Karnataka">Karnataka</option>
                <option value="Delhi">Delhi</option>
            </select>

            <button type="button" class="button" id="btnSubmit">Submit</button>
        </form>
        <div id="lblMess" style="color: aqua;"></div>
        <label id="lblSucmess" style="color: green;"></label>
    </div>

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script>
        $(document).ready(function () {
            let Fname;
            let Lname;
            let Email;
            let MNo;
            let State;
            $('#btnSubmit').click(function () {
                Fname = $('#txtfirstname').val();
                Lname = $('#txtlastname').val();
                Email = $('#txtemail').val();
                MNo = $('#txtmNo').val();
                State = $('#drpState').val();
                if (Fname == '') {
                    $('#lblMess').html("Please Enter First Name...")
                }
                else if (Lname == '') {
                    $('#lblMess').html("Please Enter Last Name...")
                }
                else if (Email == '') {
                    $('#lblMess').html("Please Enter Email...")
                }
                else if (MNo == '') {
                    $('#lblMess').html("Please Enter Mobile Num...")
                }
                else if (State == '') {
                    $('#lblMess').html("Please Enter State...")
                }
                else {
                    $('#lblMess').html("Saved Successfully...")
                }
            })
        });
    </script>
</body>
</html>
